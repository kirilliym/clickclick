#:include Assets/kv/ClickButton.kv

<Counter>
    texture_background: None
    start_count: None
    count: self.start_count

    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            texture: self.texture_background

    Label:
        markup: True
        text: str(root.count)
        color: (120/255, 81/255, 169/255, 1)
        size_hint: (0.2, 0.2)
        pos_hint: {"center_x": 0.5, "center_y": 0.8}
        font_size: (self.width*self.height)**0.5
        font_name: "data/ChangaOne-Regular.ttf"

    ClickButton:
        color: (120/255, 81/255, 169/255, 1)
        scale: 0.6
        pos_hint: {"center_x": 0.5, "center_y": 0.5,}
        on_press: root.plus_1()
